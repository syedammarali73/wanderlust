<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input 
        type="text"
        name="username"
        id="username"
        class="form-control"
        required 
        />

        <div class="valid-feedback">Username looks good!</div>
      </div>
      
      <!-- <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input 
        type="email" 
        id="email" 
        name="email" 
        class="form-control" 
        required 
        />
      </div> -->
      
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input 
        type="password" 
        id="password" 
        name="password" 
        class="form-control" 
        required 
        />
        <div class="valid-feedback">Password looks good!</div>
      </div>
      <button class="btn btn-success">SignIn</button>
    </form>
  </div>
</div>
